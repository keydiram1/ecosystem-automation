def absScriptPath = "/devops/run_tests/abs/AbsScript.groovy"
def absScript

pipeline{

    agent {
        label "${params.jenkins_slave}"
    }
    parameters{
        booleanParam(name: 'reinstall_abs_http_local', defaultValue: true)
        booleanParam(name: 'test_abs_http_local', defaultValue: true)

        booleanParam(name: 'reinstall_abs_local_remote', defaultValue: true)
        booleanParam(name: 'test_abs_local_remote', defaultValue: true)

        booleanParam(name: 'reinstall_abs_s3_remote', defaultValue: true)
        booleanParam(name: 'test_abs_s3_remote', defaultValue: true)

        string(name: 'abs_branch', defaultValue: 'v3', description: 'The ABS branch you want to install from')
        choice(name: 'jvm_suspend', description: 'JVM Suspend For Remote Debug', choices: ['n', 'y'])
        choice(name: 'parallel_classes', description: 'How many test classes to run in parallel', choices: ['30', '1', '2', '3'])
        choice(name: 'asdb_version', description: 'Set the version of the Aerospike images', choices: ['7.2.0.3', '7.1.0.9', '7.0.0.18', '6.4.0.26', '6.3.0.31'])
        booleanParam(name: 'pull_from_jfrog', defaultValue: false)
        string(name: 'abs_version', defaultValue: 'tests', description: 'Replace the tag of the Jfrog-ABS images')
        choice(name: 'abs_jfrog_stage', description: 'Choose the JFrog stage to pull from', choices: ['dev', 'stage', 'prod'])
        choice(name: 'jenkins_slave', description: 'The slave that the job will run on', choices: ['AllSlaves', 'Slave1', 'Slave2', 'Slave3'])
    }
    options {
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '10', daysToKeepStr: '30'))
    }

    environment {
        GITHUB_TOKEN = credentials('GITHUB_TOKEN')
    }

    stages {
        stage('Uninstall ABS http-local') {
            when {
                expression { return params.reinstall_abs_http_local }
            }
            steps {
                script {
                    absScript = load pwd() + absScriptPath
                    absScript.uninstall()
                }
            }
        }
        stage('Install ABS http-local') {
            when {
                expression { return params.reinstall_abs_http_local }
            }
            steps {
                script {
                    absScript.install('http')
                }
            }
        }
        stage('Run Backup tests http-local') {
            when {
                expression { return params.test_abs_http_local }
            }
            steps {
                script{
                    absScript = load pwd() + absScriptPath
                    absScript.runMvnIntegrationTest("ABS-SLOW-BACKUP")
                }
            }
        }

        stage('Uninstall ABS local-remote') {
            when {
                expression { return params.reinstall_abs_local_remote }
            }
            steps {
                script {
                    absScript = load pwd() + absScriptPath
                    absScript.uninstall()
                }
            }
        }
        stage('Install ABS local-remote') {
            when {
                expression { return params.reinstall_abs_local_remote }
            }
            steps {
                script {
                    dir("./devops/install/abs") {
                        sh "echo 'SERVICE_CONF_FILE=configRemoteLocal.yml' >> .env"
                    }
                    absScript.install('local')
                }
            }
        }
        stage('Run Backup tests local-remote') {
            when {
                expression { return params.test_abs_local_remote }
            }
            steps {
                script{
                    absScript = load pwd() + absScriptPath
                    absScript.runMvnIntegrationTest("ABS-CONFIGURATIONS")
                }
            }
        }

        stage('Uninstall ABS s3-remote') {
            when {
                expression { return params.reinstall_abs_s3_remote }
            }
            steps {
                script {
                    absScript = load pwd() + absScriptPath
                    absScript.uninstall()
                }
            }
        }
        stage('Install ABS s3-remote') {
            when {
                expression { return params.reinstall_abs_s3_remote }
            }
            steps {
                script {
                    dir("./devops/install/abs") {
                        sh "echo 'SERVICE_CONF_FILE=configRemoteS3.yml' >> .env"
                    }
                    absScript.install('s3')
                }
            }
        }
        stage('Run Backup tests s3-remote') {
            when {
                expression { return params.test_abs_s3_remote }
            }
            steps {
                script{
                    absScript = load pwd() + absScriptPath
                    absScript.runMvnIntegrationTest("ABS-CONFIGURATIONS")
                }
            }
        }
    }
}
